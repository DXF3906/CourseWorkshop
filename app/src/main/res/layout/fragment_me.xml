<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f1000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <!--设置-->
        <ImageView
            android:clickable="true"
            android:id="@+id/iv_setting_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/button_setting" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@mipmap/background_half">

        <TextView
            android:id="@+id/tv_login_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="没有什么能够阻挡，我对学习的向往"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <!--登陆返回的头像-->
        <ImageView
            android:id="@+id/iv_login_touxiang_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/tv_login_name_id"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/defaulthead_cirl" />

        <Button
            android:id="@+id/btn_regist_id"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/btn_login_id"
            android:layout_alignStart="@+id/btn_login_id"
            android:layout_below="@+id/btn_login_id"
            android:layout_marginTop="12dp"
            android:background="@mipmap/background_exam_progress"
            android:text="注册"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_login_id"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/iv_login_touxiang_id"
            android:layout_alignRight="@+id/iv_login_touxiang_id"
            android:layout_below="@+id/tv_login_name_id"
            android:layout_marginTop="12dp"
            android:background="@mipmap/background_exam_progress"
            android:text="登录"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView6"
            android:src="@mipmap/qrcode_regist"
            android:layout_alignTop="@+id/btn_regist_id"
            android:layout_toRightOf="@+id/tv_login_name_id"
            android:layout_toEndOf="@+id/tv_login_name_id" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_mycourse_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/course_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_mycourse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/course_id"
                android:text="我的课程" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/me_more" />
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_huancun_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/download_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_mydownload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/download_id"
                android:text="我的收藏" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/me_more" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/storage_background" />

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_money_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/money_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_mymoney" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/money_id"
                android:text="我的钱包" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/caonidaye"
                android:text="充值"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/caonidaye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/me_more" />
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_mytiezi_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_mypost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/post_id"
                android:text="我的帖子" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/me_more" />
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_mymessage_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_mymessage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/message_id"
                android:text="我的消息" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/me_more" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@mipmap/btn_choose_from_gallery_pressed" />
    </LinearLayout>


</LinearLayout>
