            android:id="@+id/btn_7f_id"
            android:clickable="true"
            android:onClick="aboutButtonAction"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/shequ_logcat_selector"
            android:text="7F 热门技术" />

        <ListView
            android:id="@+id/lv_re_id"
            android:layout_width="match_parent"
            android:layout_height="706dp"></ListView>

        <!--8F 其他-->
        <Button
            android:id="@+id/btn_8f_id"
            android:clickable="true"
            android:onClick="aboutButtonAction"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/shequ_logcat_selector"
            android:text="8F 其他" />

        <ListView
            android:id="@+id/lv_other_id"
            android:layout_width="match_parent"
            android:layout_height="212dp"></ListView>
    </LinearLayout>
