            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<RelativeLayout
    android:id="@+id/rl_main_id"
    android:layout_width="match_parent"
    android:layout_height="130dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main_fragment_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <ImageView
        android:id="@+id/iv_main_dot_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_dot_selector"/>
    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_main_dot2_id"
        android:layout_toLeftOf="@+id/iv_main_dot_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_dot_selector"/>
    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/iv_main_dot3_id"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/iv_main_dot2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_dot_selector"/>
</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
