<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1000000">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="OpenLeftMenu"
            android:src="@mipmap/button_catolgue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="微社区"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ptrsv_shequ_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            ptr:ptrMode="both">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ui_id"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@mipmap/ui_jiaocai" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_program_java" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="java" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="有奖活动" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="灌水贴图" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="新手报到" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="电子书籍" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="UI设计" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="Android" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="软件下载" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="设计大赛" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="提个建议" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/gray" />

                <RadioGroup
                    android:id="@+id/rg_shequ_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/sq_rb_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="全部帖子" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/sq_rb_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="待解决问题" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <ListView
                    android:id="@+id/lv_shequ_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

            </LinearLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

        <RadioGroup
            android:id="@+id/rg2_shequ_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/sq_rb_selector"
                android:button="@null"
                android:gravity="center"
                android:text="全部帖子" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/sq_rb_selector"
                android:button="@null"
                android:gravity="center"
                android:text="待解决问题" />
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>
