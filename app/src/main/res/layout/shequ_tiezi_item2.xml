<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_shequ_touxiang_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_top_station" />

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shequ_title_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Volley 的基本使用/设置HTTP请求参数、APIKEY"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sq_imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/button_show_password" />

            <TextView
                android:id="@+id/tv_shequ_sutdy_num_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="8025"
                android:textSize="8sp"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/sq_imageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/question_detail_comment_reply" />

            <TextView
                android:id="@+id/tv_shequ_pinglun_num_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="8sp"
                android:text="758" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_shequ_time1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="发表时间：2016-07-11 09:05"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_shequ_time2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新回复：2016-07-11 09:33"
                android:textSize="8sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
